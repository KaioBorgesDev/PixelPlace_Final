@model ProjetoPixelPlace.Entities.Jogo

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<link rel="stylesheet" href="~/css/Details.css">

@{

    string imagem = Convert.ToBase64String(@Model.Imagem);
    string formato = "data:image/jpeg;base64," + imagem;
}

<div class="jogoPrincipal" style="background-image: url('@formato')">
    <div class="mainInfo">
        <p class="nomeJogo">
            <a asp-action="Index">
                <svg width="15" height="23.5" viewBox="0 0 22 39" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1.12046 18.1002C0.923857 18.2964 0.767807 18.5297 0.661316 18.7869C0.554825 19.044 0.5 19.3198 0.5 19.5983C0.5 19.8768 0.554825 20.1526 0.661316 20.4097C0.767807 20.6669 0.923857 20.9002 1.12046 21.0964L17.901 37.976C18.096 38.1737 18.328 38.3307 18.5836 38.4378C18.8392 38.545 19.1134 38.6001 19.3903 38.6001C19.6672 38.6001 19.9413 38.545 20.1969 38.4378C20.4526 38.3307 20.6845 38.1737 20.8795 37.976C21.0761 37.7798 21.2322 37.5465 21.3387 37.2894C21.4452 37.0322 21.5 36.7565 21.5 36.4779C21.5 36.1994 21.4452 35.9236 21.3387 35.6665C21.2322 35.4094 21.0761 35.176 20.8795 34.9799L5.5673 19.5983L20.8795 4.21675C21.2745 3.81944 21.4964 3.28057 21.4964 2.71868C21.4964 2.1568 21.2745 1.61793 20.8795 1.22062C20.4846 0.823305 19.9489 0.600098 19.3903 0.600098C18.8317 0.600098 18.296 0.823305 17.901 1.22062L1.12046 18.1002Z" fill="white" />
                </svg>
            </a>
            @Model.Nome
        </p>
        <div class="subHead">
            <p class="subsub">Microsoft Studios </p>
            <img src="~/img/Square.svg">
            <p class="subsub">Action & Adventure</p>
            <img src="~/img/Square.svg">
            <div class="rating">
                <img src="~/img/Rating.svg">
                <p class="subsub">@Model.Numero_estrelas</p>
            </div>
        </div>
        <p class="descricao">@Model.Descricao</p>
        <div class="botoes">
            <div class="precoJogo">
                <button class="btn">
                    <p class="pBtn">Comprar já </p>
                    <p class="pBtn">@Model.Preco </p>
                </button>
            </div>
            <a asp-route-id="@Model.IdJogo" asp-action="Adicionar" asp-controller="Jogo"><button class="btn1"><img src="~/img/ButtonIcon.svg"></button></a>
            <button class="btn1"><img src="~/img/cartao.svg"></button>
            <a asp-route-id="@Model.IdJogo" asp-action="InserirCarrinho" asp-controller="Carrinho"><button class="btn1"><img src="~/img/carrinho.svg"></button></a>

        </div>
    </div>
</div>